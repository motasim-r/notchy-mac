<Window
    x:Class="NotchyTeleprompterWin.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NotchyTeleprompterWin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Notchy Teleprompter"
    Width="900"
    Height="640">

    <Grid Padding="20" Background="#121318">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button Content="{x:Bind Controller.PlayPauseLabel, Mode=OneWay}"
                    Click="OnTogglePlayback"
                    Padding="12,6"/>
            <Button Content="Reset"
                    Click="OnReset"
                    Padding="12,6"/>
            <TextBlock Text="Speed"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="12,0,0,0"/>
            <Slider Minimum="4"
                    Maximum="260"
                    Width="200"
                    Value="{x:Bind Controller.SpeedPxPerSec, Mode=TwoWay}"/>
            <TextBlock Text="{x:Bind Controller.SpeedPxPerSec, Mode=OneWay}"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="8,0,0,0"/>
            <ToggleSwitch Header="Show Overlay"
                          IsOn="{x:Bind Controller.OverlayVisible, Mode=TwoWay}"
                          Margin="20,0,0,0"/>
            <ToggleSwitch Header="Hide in Capture"
                          IsOn="{x:Bind Controller.ExcludeFromCapture, Mode=TwoWay}"
                          Margin="8,0,0,0"/>
        </StackPanel>

        <TextBox Grid.Row="1"
                 Text="{x:Bind Controller.ScriptText, Mode=TwoWay}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 FontSize="16"
                 Foreground="White"
                 Background="#1C1D22"
                 BorderBrush="#2A2B31"
                 BorderThickness="1"
                 Padding="12"/>
    </Grid>
</Window>
